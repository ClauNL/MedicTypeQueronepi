<div class="banner">
  <div class="row">
    <div class="col m12 valign-wrapper">
      <h4 class="vertical-align white-text">Login para Pacientes</h4>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col m3"></div>
    <div class="col m6">
      <form class="row" method="POST" action="/Paciente/Modificar" name="formpaciente">
        <div class="col m12 card-panel">
          <div class="row">
            <div class="col m12 input-field">
              <input placeholder="12345678" id="cedula" name="cedula" type="text" class="validate">
              <label for="cedula">Cédula:</label>
            </div>
          </div>
          <div class="row center">
            <div class="col m6">
              <button class="waves-effect waves-light btn blue darken-1" type="submit" id="HM">Historia Médica</button>
            </div>
            <div class="col m6">
            	<button class="waves-effect waves-light btn blue darken-1" type="submit" id="MD">Modificar Datos</button>
            </div>
          </div>
        </div>
      </form>
    </div>
    <div class="col m3"></div>
  </div>
</div>
<script type="text/javascript">
  document.getElementById('HM').addEventListener(click, historiaMedica);
  document.getElementById('MD').addEventListener(click, modificarDatos);
  function ModificarDatos () {
    document.formpaciente.action = '/Paciente/Modificar'
  }
  function historiaMedica () {
    document.formpaciente.action = '/Paciente/Informes'
  }
</script>